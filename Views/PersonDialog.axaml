<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="300" Height="350"
        x:Class="DialogVisitorApp.Views.PersonDialog"
        Title="PersonDialog">
<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Name="OkBtn" Click="OkBtn_Click"  Content="OK" HorizontalAlignment="Left" Margin="4,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="30"/>
        <Label Content="First Name" Grid.Row="0"  HorizontalAlignment="Center"  VerticalAlignment="Center" />
        <Label Content="Last Name" Grid.Row="1"  HorizontalAlignment="Center"  VerticalAlignment="Center" />
        <Label Content="Phone" Grid.Row="2"  HorizontalAlignment="Center"  VerticalAlignment="Center" />
        <TextBox Name="FirstName" Text="{Binding Path=FirstName}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"  VerticalAlignment="Center" Width="120"/>
        <TextBox Name="LastName" Text="{Binding Path=LastName}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"  VerticalAlignment="Center" Width="120"/>
        <TextBox Name="Phone" Text="{Binding Path=Phone}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"  VerticalAlignment="Center" Width="120"/>

    </Grid>
</Window>